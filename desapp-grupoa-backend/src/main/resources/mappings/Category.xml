<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping default-lazy="false" default-access="field" default-cascade="save-update">
    <class name="ar.edu.unq.desapp.grupoa.model.Category.Category" table="Category" >
        <id name="id" type="java.lang.Integer">
            <column name="C_ID" />
            <generator class="identity" />
        </id>

        <property name="name" type="string"></property>
        
        <bag name="subcategories" cascade="all">
        	<key column="C_SUBCATEGORY"></key>
            <one-to-many class="ar.edu.unq.desapp.grupoa.model.Category.Subcategory"/>
        </bag>
    </class>
</hibernate-mapping>
